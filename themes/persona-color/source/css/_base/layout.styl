*
  margin 0
  padding 0

body
  background color-background
  color color-font
  font-family font-default
  font-size 14px
  text-shadow 0 0 1px transparent
  @media screen and (max-width: 1260px)
    margin 0 30px
  @media screen and (max-width: 600px)
    font-size 13px
    margin 0 10px

h1, h2, h3, h4, h5, h6
  font-family font-title

h1
  font-size 1.8em

h2
  font-size 1.5em

h3
  font-size 1.3em

a
  text-decoration none
  color color-link
  &:hover
    text-decoration underline

.alignleft
  float left

.alignright
  float right

.clearfix
  clearfix()

.inner
  width page-width
  margin 0 auto
  @media screen and (max-width: 1260px)
    width 100%

#main-col
  width 900px
  overflow auto
  @media screen and (max-width: 1260px)
    max-width 70%
  @media screen and (max-width: 900px)
    max-width 66.5%
  @media screen and (max-width: 800px)
    max-width 100%
    margin-right 0
    float none

#wrapper
  @media screen and (max-width: 800px)
    margin-right 0
  #myCanvasContainer
    margin-left auto
    margin-right auto
    width 500px

p
  text-indent 2em

#header-fix
  height  25px
  @media screen and (max-width: 800px)
    height  75px

